<h1>Listing cds</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Year</th>
    <th>Reviews</th>
    <th></th>
  </tr>

<% @cds.each do |cd| %>
  <tr>
    <td><%= cd.name %></td>
    <td><%= cd.year %></td>
    <td><%= cd.reviews %></td>
    <td>
      <% if current_user.admin?  %>
        <%= link_to 'Show', cd %>
        <%= link_to 'Edit', edit_cd_path(cd) %>
        <%= link_to 'Destroy', cd, confirm: 'Are you sure?', method: :delete %></td>
      <% end %>
  </tr>
<% end %>
</table>

<br />

      <% if current_user.admin?  %>
        <%= link_to 'New Cd', new_cd_path %>
      <% end %>
