<%= stylesheet_link_tag '/coin-slider/coin-slider-styles.css', :media => 'screen' %>
<script src="/coin-slider/coin-slider.min.js" type="text/javascript" charset="utf-8"></script>
<script src="/javascripts/initgallery.js" type="text/javascript" charset="utf-8"></script>

<div id='coin-slider'>
  <% if @gallery !=nil %>
    <% @gallery.app_images.each do |main_image| %>
      <a><img src='<%= main_image.url %>' ></a>
    <% end %>
  <% end %>
</div>

<div class="boxWrapper">
    <div id="feedsBox">
        <div class="innerBox boxWrapper" >
            <article class="col1">
                <h2>Upcoming Events</h2>
                <ul>
                    <% @events.each do |event| %>
                        <li>
                            <span><%= event.dateofevent%></span>&nbsp;<span><%= event.title%></span>
                            <p>
                                <%= event.townstate%>
                            </p>
                        </li>                        
                    <% end %>
                </ul>
            </article>
            <article class="col1">
                <h2>Latest Video</h2>
                <iframe width="170" height="157" src="http://www.youtube.com/embed/B3bNXpf0ZNk" frameborder="0" allowfullscreen></iframe>
            </article>
            <article class="col1">
                <h2>Latest News</h2>
                <ul>
                    <% @news.each do |news| %>
                        <li>
                            <span><%= news.date%></span>
                            <p>
                                <%= news.content%>
                            </p>
                        </li>                        
                    <% end %>
                </ul>
            </article>
            <article class="col2">
                <h2>Store</h2>
                <ul>
                    <% @cds.each do |cd| %>
                        <li>
                            <span><%= cd.name%></span>
                        </li>                        
                    <% end %>
                </ul>
            </article>
            
        </div>
    </div>
</div>